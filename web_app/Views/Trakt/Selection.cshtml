@model web_app.ViewModels.SeletionMovieViewModel
@{
    var count = 0;

}

<div class="grid-parent grid-100">
    <h1>Selection</h1>
        @foreach (var movie in Model.movieResults)
        {
            count++;

            if (count % 3 == 0)
            {
                @:<div class="grid-container">
             }

            <div class="grid-30 cellphone-container">
                <div class="movie">
                    <img class="movie-img" src="@Html.Raw(movie.BackdropPathUrl)"></img>
                    <div class="text-movie-cont">
                        <div class="mr-grid">
                            <div class="col1">
                                <h1><a href="@Url.Action("Details", "Trakt", new { movieId = @movie.id })">@movie.title</a></h1>
                                <ul class="movie-gen">
                                    <li>PG-13  /</li>
                                    <li>2h 49min  /</li>
                                    <li>Adventure, Drama, Sci-Fi,</li>
                                </ul>
                            </div>
                        </div>
                        <div class="mr-grid summary-row">
                            <div class="col2">
                                <h5>SUMMARY</h5>
                            </div>
                            <div class="col2">
                                <ul class="movie-likes">
                                    <li><i class="fa fa-star"></i>@movie.vote_average</li>
                                    <li><i class="material-icons">&#xE813;</i>@movie.vote_count</li>
                                </ul>
                            </div>
                        </div>
                        <div class="mr-grid">
                            <div class="col1">
                                <p class="movie-description">
                                    @movie.overview
                                </p>
                            </div>
                        </div>
                        <div class="mr-grid actors-row">
                            <div class="col1">
                                <p class="movie-actors">Dave Dave Dave</p>
                            </div>
                        </div>
                        <div class="mr-grid action-row">
                            <div class="col2">
                                <div class="watch-btn"><h3><i class="material-icons">&#xE037;</i>WATCH TRAILER</h3></div>
                            </div>
                            <div class="col6 action-btn">
                                <i class="material-icons">&#xE161;</i>
                            </div>
                            <div class="col6 action-btn">
                                <i class="material-icons">&#xE866;</i>
                            </div>
                            <div class="col6 action-btn">
                                <i class="fa fa-calendar"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            if (count % 3 == 0)
            {
                @:</div>
             }
}
</div>




